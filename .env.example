# x402 Configuration
# Get your CDP API keys from https://portal.cdp.coinbase.com/projects
CDP_API_KEY_ID=your_cdp_api_key_id
CDP_API_KEY_SECRET=your_cdp_api_key_secret

# Your wallet address to receive x402 payments
PAYMENT_RECEIVER_ADDRESS=0xYourEthereumAddress

# Network Configuration
# For testnet: unichain-sepolia | For mainnet: unichain
NETWORK=unichain-sepolia

# RPC URLs
# Unichain Mainnet
UNICHAIN_RPC_URL=https://mainnet.unichain.org

# Unichain Sepolia (Testnet)
UNICHAIN_SEPOLIA_RPC_URL=https://sepolia.unichain.org

# Optional: Relayer wallet for executing swaps on behalf of users
# WARNING: Keep this secure! Only use for testnet initially
RELAYER_PRIVATE_KEY=your_private_key_for_executing_swaps

# Thirdweb Engine (Account Abstraction + Gas Sponsorship)
# Get from: https://thirdweb.com/dashboard/engine
THIRDWEB_ENGINE_URL=https://engine-xxx.thirdweb.com
THIRDWEB_ENGINE_ACCESS_TOKEN=thirdweb_xxxxxxxx
BACKEND_WALLET_ADDRESS=0xYourBackendWalletAddress

# Universal Router address (Uniswap V4)
UNIVERSAL_ROUTER_ADDRESS=0xef740bf23acae26f6492b10de645d6b98dc8eaf3

# Server Configuration
PORT=4021

# x402 Payment Configuration
# Set to true to require payment for all endpoints (production)
# Set to false to allow access without payment (development)
X402_STRICT_MODE=false
NODE_ENV=development
