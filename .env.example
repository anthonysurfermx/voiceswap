# Network Configuration
NETWORK=monad

# RPC URLs
MONAD_RPC_URL=https://rpc.monad.xyz

# Monadscan API (Etherscan-compatible, get key at https://monadscan.com/myapikey)
MONADSCAN_API_KEY=your_monadscan_api_key

# Optional: Relayer wallet for executing swaps on behalf of users
# WARNING: Keep this secure!
RELAYER_PRIVATE_KEY=your_private_key_for_executing_swaps

# Coinbase Onramp (CDP API credentials for session token generation)
# Create at: https://portal.cdp.coinbase.com/
CDP_API_KEY_ID=your_cdp_api_key_id
CDP_API_KEY_SECRET=-----BEGIN EC PRIVATE KEY-----\nyour_ec_private_key_here\n-----END EC PRIVATE KEY-----
CDP_PROJECT_ID=your_cdp_project_id

# Server Configuration
PORT=4021
NODE_ENV=development
